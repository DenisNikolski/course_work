<div id="pipes-index">
  <h1>Our products</h1>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <% @pipes.each_slice(4) do |pipes_row| %>
          <% pipes_row.each do |pipe| %>
            <div class="col-md-3 col-sm-3">
              <h4><%= pipe.title %></h4>
              <%= image_tag(pipe.img_src, alt: 'pipe')%>
              <%= link_to 'read more', pipe.pipe_descr.first ? pipe_path(pipe) : '#', class: 'btn btn-primary' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 sidebar">
      <a href="#" class="list-group-item list-group-item-action active">All</a>
      <% @categories.each do |category| %>
        <a href="#" class="list-group-item list-group-item-action"><%= category.name %></a>
      <% end %>
    </div>
  </div>

</div>