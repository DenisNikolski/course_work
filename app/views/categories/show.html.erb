<div id="pipes-index">
  <h1><%= @category.name %></h1>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <% @products.each_slice(4) do |pipes_row| %>
          <% pipes_row.each do |pipe| %>
            <div class="col-md-3 col-sm-3">
              <h4><%= pipe.title %></h4>
              <%= image_tag(pipe.img_src, alt: 'pipe') %>
              <%= link_to 'read more', pipe_path(pipe), class: 'btn btn-primary' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 sidebar">
      <%= link_to 'All', categories_path, class: 'list-group-item list-group-item-action' %>
      <% @categories.each do |category| %>
        <% category.id.to_s == params[:id] ? cl = 'list-group-item list-group-item-action active' : cl = 'list-group-item list-group-item-action' %>
        <%= link_to category.name, category_path(category.id), class: cl %>
      <% end %>
    </div>
  </div>

</div>