<h1>Add new Pipe</h1>
<%= form_for @pipe do |f| %>
  <div class="form-group">
    <div><%= f.label :title %></div>
    <div><%= f.text_field :title, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <div><%= f.label :title %></div>
    <div><%= f.text_field :title, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]},
                 {:include_blank => 'select one'}, class: 'form-control' %>
  </div>

  <%= f.submit 'submit', class: 'btn btn-primary' %>
  <%= link_to 'cancel', pipe_path, class: 'btn btn-primary' %>

<%= end %>